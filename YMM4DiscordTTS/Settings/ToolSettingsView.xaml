<UserControl x:Class="YMM4DiscordTTS.Settings.ToolSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YMM4DiscordTTS.Settings"
             xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Focusable="True" >
        <Expander Header="読み上げ設定" IsExpanded="True">
            <StackPanel>
                <Grid>

                    <Label Content="話者" />
                    <ComboBox x:Name="SpeakerComboBox" 
                              ItemsSource="{Binding Source={x:Static local:ToolSettings.Default}, Path=AvailableSpeakers}"
                              DisplayMemberPath="Name" 
                              SelectedValuePath="Id"
                              SelectedValue="{Binding Source={x:Static local:ToolSettings.Default}, Path=SpeakerId}"
                              HorizontalAlignment="Right" 
                              MinWidth="200"/>
                </Grid>
                <Grid>
                    <Label Content="読み上げスピード"/>
                    <c:TextBoxSlider Value="{Binding Source={x:Static local:ToolSettings.Default},Path=NormalSpeed}" 
                                     DefaultValue="{Binding Source={x:Static local:ToolSettings.Default},Path=NormalSpeed}" 
                                     StringFormat="F1" 
                                     Unit=""
                                     Min="0.5"
                                     Max="4.0"
                                     HorizontalAlignment="Right"
                                     Width="200"/>

                </Grid>
                <Grid>

                    <Label Content="最大文字数" />
                    <c:TextEditor Text="{Binding Source={x:Static local:ToolSettings.Default}, Path=MaxTextLength}"
                                  AcceptsReturn="False"
                                  HorizontalAlignment="Right"
                                  Width="200"/>
                </Grid>
                <Grid>
                    <Label Content="入退出時のメッセージ" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Label Content="参加時"/>
                            <c:ToggleSlider Value="{Binding Source={x:Static local:ToolSettings.Default}, Path=IsJoinAnnouncement}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Label Content="退出時"/>
                            <c:ToggleSlider Value="{Binding Source={x:Static local:ToolSettings.Default}, Path=IsLeaveAnnouncement}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Expander>
        <Expander Header="辞書設定" IsExpanded="True">
            <StackPanel>
                <DataGrid ItemsSource="{Binding Source={x:Static local:ToolSettings.Default}, Path=DictionaryEntries}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Vertical"
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="変換前（テキスト）" Binding="{Binding Before, UpdateSourceTrigger=PropertyChanged}" Width="*"/>

                        <DataGridTextColumn Header="変換後（読み方）" Binding="{Binding After, UpdateSourceTrigger=PropertyChanged}" Width="*"/>

                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="削除" Click="RemoveButton_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="新しい項目を追加" Click="AddButton_Click" HorizontalAlignment="Left"/>
            </StackPanel>
        </Expander>
    </StackPanel>
</UserControl>
